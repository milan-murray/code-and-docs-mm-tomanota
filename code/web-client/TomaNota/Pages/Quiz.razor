					}


					<div>
						<form @onsubmit="AdvanceQuiz">
							<input type="text" class="quiz-input shadow-lg mt-5" @bind="@Response"/>
						</form>
						<div class="">
							<div class="text-center">
								@if (PromptComplete)
								{
									@if (!CorrectDisplay)
