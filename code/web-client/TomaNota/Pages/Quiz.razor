			BtnText = "Check Answer";
			PromptComplete = false;
			// Feedback = "Expected Answer: ";
			CorrectDisplay = false;
			Response = "";
			UserAttemptGreen = "";
			UserAttemptRed = "";
			UserAttemptYellow = "";
			ResponsiveButton = "btn btn-light btn-lg btn-block mt-5";

