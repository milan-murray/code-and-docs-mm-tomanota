				//UserAttemptRed = RoundResult.UserAttempt.ToString().Substring(RoundResult.Index, RoundResult.UserAttempt.ToString().Count() - 1).ToString();
			}
			ResponsiveButton = "btn btn-danger btn-lg btn-block mt-5";
		}
		PromptComplete = true;
