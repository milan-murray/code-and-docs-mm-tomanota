		}
		else
		{
			RoundResult = new Outcome() { AreEqual = false, CorrectAnswer = returnedPrompts.Prompts[QuizIndex][1].ToString(), Index = -1, UserAttempt = "" };
		}
	}

	public void DisplayAns()
