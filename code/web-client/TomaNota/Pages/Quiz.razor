			{
				QuizIndex++;
				CurrentHeading = returnedPrompts.Prompts[QuizIndex][0].ToString();
			}
			else
			{
				QuizComplete = true;
				if (!Premade)
				{
					string key = "X00162027";
					string user = FirebaseAuthService.FirebaseAuthClient.User.Info.DisplayName.ToString();
					if (errorIndexes.Count() < (returnedPrompts.numOfPrompts - (returnedPrompts.numOfPrompts / 3)))
					{
						if (returnedPrompts.CurrentScore < 10)
						{
							string uri = $"https://localhost:7080/userNotes/incScore/key/{key}/userIn/{user}/titleIn/{Title}";
							await Http.PutAsync(uri, null);
						}
					}
					else
					{
						if (returnedPrompts.CurrentScore > 0)
						{
							string uri = $"https://localhost:7080/userNotes/decScore/key/{key}/userIn/{user}/titleIn/{Title}";
							await Http.PutAsync(uri, null);
						}
					}
				}
			}
		}
